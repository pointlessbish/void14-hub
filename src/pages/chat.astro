---
import Layout from '../layouts/Layout.astro';
import '../styles/chat-select.css';
---

<Layout title="void14|select channel">
    <main id="selection-screen">
        <div class="header-section">
            <h1 class="grid-title">PROTOCOL: SELECT_UPLINK_SOURCE</h1>
            <p class="subtitle">CONNECTING_TO_ACTIVE_NODES...</p>
        </div>
        
        <div id="grid-container" class="streamer-grid">
            <div class="loading-state">
                <span class="pulse-text">SCANNING_FREQUENCIES...</span>
            </div>
        </div>

        <div class="footer-status">
            <span class="pulse-dot"></span> 
            <span id="system-text">SYSTEM_READY: STANDING_BY</span>
        </div>
    </main>

    <script is:inline>
        const hoverSound = new Audio('/sounds/retro-blip.wav');
        hoverSound.volume = 0.15;
        let lastHoveredId = null;

        async function loadStreamerGrid() {
            const container = document.getElementById('grid-container');
            const systemText = document.getElementById('system-text');
            
            try {
                const res = await fetch('https://api.void14.wtf');
                if (!res.ok) throw new Error('API_OFFLINE');
                
                const data = await res.json();
                const users = data.users || [];
                container.innerHTML = ''; 

                users.forEach(user => {
                    const card = document.createElement('div');
                    card.className = 'streamer-card';
                    card.innerHTML = `
                        <div class="card-hitbox"></div>
                        <div class="card-glow" style="pointer-events: none;"></div>
                        <img src="${user.profile_image_url}" alt="${user.display_name}" style="pointer-events: none;">
                        <span style="pointer-events: none;">${user.display_name}</span>
                    `;

                    card.onclick = () => {
                        systemText.innerHTML = `ESTABLISHING_UPLINK: <span class="cyan-highlight">${user.login.toUpperCase()}</span>...`;
                        window.location.href = `/chat-overlay?channel=${user.login.toLowerCase()}`;
                    };

                    container.appendChild(card);
                });

                systemText.innerHTML = `NODES_DETECTED: <span class="cyan-highlight">${users.length}</span> ACTIVE_CHANNELS`;
            } catch (err) {
                console.error(err);
                systemText.innerHTML = `<span style="color: #ff0055;">CRITICAL_FAILURE: UNABLE_TO_SYNC</span>`;
            }
        }

        const grid = document.getElementById('grid-container');
        grid.addEventListener('mouseover', (e) => {
            const isHitbox = e.target.classList.contains('card-hitbox');
            const card = e.target.closest('.streamer-card');
            if (isHitbox && card && card !== lastHoveredId) {
                hoverSound.currentTime = 0;
                hoverSound.play().catch(() => {});
                lastHoveredId = card;
            }
        });

        grid.addEventListener('mouseout', (e) => {
            if (e.target.classList.contains('card-hitbox')) {
                lastHoveredId = null;
            }
        });

        loadStreamerGrid();
    </script>
</Layout>

<style>
    #selection-screen {
        position: relative;
        z-index: 10;
        padding-top: 80px;
    }

    /* RESTORE HEADER TYPOGRAPHY */
    .header-section {
        text-align: center;
        margin-bottom: 50px;
    }

    .grid-title {
        font-family: 'Inter', sans-serif;
        font-weight: 900;
        font-size: 1.5rem;
        letter-spacing: 4px;
        color: #fff;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
        margin: 0;
    }

    .subtitle {
        font-family: 'Inter', sans-serif;
        font-size: 0.7rem;
        color: var(--void-cyan);
        opacity: 0.6;
        margin-top: 5px;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    /* SYSTEM STATUS STYLES */
    .cyan-highlight {
        color: var(--void-cyan);
        text-shadow: 0 0 8px var(--void-cyan);
        font-weight: 900;
    }

    .footer-status {
        position: fixed;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        font-family: 'Inter', sans-serif;
        font-size: 0.65rem;
        color: rgba(255, 255, 255, 0.4);
        display: flex;
        align-items: center;
        gap: 10px;
        background: rgba(0,0,0,0.5);
        padding: 5px 15px;
        border-radius: 20px;
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255,255,255,0.05);
    }

    .pulse-dot {
        width: 6px;
        height: 6px;
        background: var(--void-cyan);
        border-radius: 50%;
        box-shadow: 0 0 8px var(--void-cyan);
        animation: pulse 1.5s infinite;
    }

    @keyframes pulse {
        0% { opacity: 0.4; }
        50% { opacity: 1; }
        100% { opacity: 0.4; }
    }

    /* THE HITBOX */
    :global(.streamer-card) { position: relative; }
    :global(.card-hitbox) {
        position: absolute;
        inset: 0;
        z-index: 100;
        cursor: pointer;
        border-radius: 32px;
    }
</style>