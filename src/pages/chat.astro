---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import '../styles/chat-select.css';
---

<Layout title="void14 | select channel">
    <div id="boot-screen">
        <div class="boot-content">
            <div class="terminal-loader">VOID_OS_CORE_v1.0.4</div>
            <button id="initialize-btn">
                <span class="pulse-text-init">[ CLICK_TO_INITIALIZE_SYSTEM ]</span>
            </button>
        </div>
    </div>

    <main id="selection-screen">
        <div class="header-section">
            <h1 class="grid-title">PROTOCOL: SELECT_UPLINK_SOURCE</h1>
            <p class="subtitle">CONNECTING_TO_ACTIVE_NODES...</p>
        </div>
        
        <div id="grid-container" class="streamer-grid">
            <div class="loading-state"> 
                <span class="pulse-text">SCANNING_FREQUENCIES...</span>
            </div>
        </div>
    </main>

    <Footer />

    <script is:inline>
        // 1. LOCAL AUDIO CONFIG (No global window reliance)
        const uplinkSound = new Audio('/sounds/retro-blip.wav');
        uplinkSound.volume = 0.15;
        let lastHoveredId = null;

        const bootScreen = document.getElementById('boot-screen');
        const initBtn = document.getElementById('initialize-btn');
        const gridContainer = document.getElementById('grid-container');

        // 2. BOOT & AUDIO UNLOCK
        initBtn.addEventListener('click', () => {
            // Unlocks audio context for the domain
            uplinkSound.play().then(() => {
                uplinkSound.pause();
                uplinkSound.currentTime = 0;
                
                bootScreen.style.opacity = '0';
                setTimeout(() => {
                    bootScreen.style.display = 'none';
                    loadStreamerGrid();
                }, 500);
            }).catch(e => {
                console.error("OS_AUDIO_ERROR:", e);
                bootScreen.style.display = 'none';
                loadStreamerGrid();
            });
        });

        // 3. DYNAMIC GRID LOADING
        async function loadStreamerGrid() {
            const systemText = document.getElementById('system-text-global');
            try {
                const res = await fetch('https://api.void14.wtf');
                if (!res.ok) throw new Error('API_OFFLINE');
                const data = await res.json();
                const users = data.users || [];
                gridContainer.innerHTML = ''; 

                users.forEach(user => {
                    const card = document.createElement('div');
                    card.className = 'streamer-card';
                    card.innerHTML = `
                        <div class="card-hitbox"></div>
                        <div class="card-glow" style="pointer-events: none;"></div>
                        <img src="${user.profile_image_url}" alt="${user.display_name}" style="pointer-events: none;">
                        <span style="pointer-events: none;">${user.display_name}</span>
                    `;
                    card.onclick = () => {
                        if (systemText) systemText.innerHTML = `ESTABLISHING_UPLINK: ${user.login.toUpperCase()}...`;
                        window.location.href = `/chat-overlay?channel=${user.login.toLowerCase()}`;
                    };
                    gridContainer.appendChild(card);
                });
                
                if (systemText) systemText.innerHTML = `NODES_DETECTED: <span class="cyan-highlight">${users.length}</span> ACTIVE_CHANNELS`;
            } catch (err) {
                if (systemText) systemText.innerHTML = `<span style="color: #ff0055;">CRITICAL_FAILURE: UNABLE_TO_SYNC</span>`;
            }
        }

        // 4. LOCALIZED HOVER SOUND LOGIC
        gridContainer.addEventListener('mouseover', (e) => {
            const hitbox = e.target.closest('.card-hitbox');
            if (hitbox) {
                const card = hitbox.parentElement;
                if (card !== lastHoveredId) {
                    uplinkSound.currentTime = 0;
                    uplinkSound.play().catch(() => {});
                    lastHoveredId = card;
                }
            }
        });

        gridContainer.addEventListener('mouseout', (e) => {
            if (e.target.classList.contains('card-hitbox')) {
                lastHoveredId = null;
            }
        });
    </script>
</Layout>

<style>
    #boot-screen {
        position: fixed;
        inset: 0;
        z-index: 2000;
        background: #07030d;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.5s ease;
        pointer-events: all;
    }

    #initialize-btn {
        background: transparent;
        border: 1px solid var(--void-cyan);
        padding: 15px 30px;
        cursor: pointer;
        margin-top: 20px;
        position: relative;
        z-index: 2001;
        pointer-events: auto;
    }

    .pulse-text-init {
        animation: pulse 2s infinite;
        font-family: 'Inter', sans-serif;
        color: var(--void-cyan);
        font-weight: 900;
        letter-spacing: 2px;
    }

    #selection-screen {
        position: relative;
        z-index: 100;
        padding-top: 80px;
    }

    @keyframes pulse { 0%, 100% { opacity: 0.4; } 50% { opacity: 1; } }

    /* CARD HITBOX - Must be z-indexed high to catch events through scanlines */
    :global(.card-hitbox) {
        position: absolute;
        inset: 0;
        z-index: 1000; 
        cursor: pointer;
        pointer-events: auto;
    }

    /* TYPOGRAPHY */
    .grid-title { font-family: 'Inter', sans-serif; font-weight: 900; font-size: 1.5rem; letter-spacing: 4px; color: #fff; margin: 0; text-align: center; }
    .subtitle { font-family: 'Inter', sans-serif; font-size: 0.7rem; color: var(--void-cyan); opacity: 0.6; margin-top: 5px; text-transform: uppercase; text-align: center; }
    .cyan-highlight { color: var(--void-cyan); text-shadow: 0 0 8px var(--void-cyan); font-weight: 900; }
</style>