---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import '../styles/chat-select.css';
---

<Layout title="void14 | select channel">
    <div id="boot-screen">
        <div class="boot-content">
            <div class="terminal-loader">VOID_OS_CORE_v1.0.4</div>
            <button id="initialize-btn">
                <span class="pulse-text-init">[ CLICK_TO_INITIALIZE_SYSTEM ]</span>
            </button>
        </div>
    </div>

    <div class="page-container">
        <main id="selection-screen">
            <div class="header-section">
                <h1 class="grid-title">PROTOCOL: SELECT_UPLINK_SOURCE</h1>
                <p class="subtitle">CONNECTING_TO_ACTIVE_NODES...</p>
            </div>
            
            <div id="grid-container" class="streamer-grid">
                <div class="loading-state"> 
                    <span class="pulse-text">SCANNING_FREQUENCIES...</span>
                </div>
            </div>
        </main>

        <Footer />
    </div>

    <script is:inline>
        // 1. CONFIG & AUDIO
        const uplinkSound = new Audio('/sounds/retro-blip.wav');
        uplinkSound.volume = 0.15;
        let lastHoveredId = null;

        const bootScreen = document.getElementById('boot-screen');
        const initBtn = document.getElementById('initialize-btn');
        const gridContainer = document.getElementById('grid-container');

        // 2. INITIALIZE LOGIC
        initBtn.addEventListener('click', () => {
            uplinkSound.play().then(() => {
                uplinkSound.pause();
                uplinkSound.currentTime = 0;
                document.body.classList.add('ready');
                
                bootScreen.style.opacity = '0';
                setTimeout(() => {
                    bootScreen.style.display = 'none';
                    loadStreamerGrid();
                }, 500);
            }).catch(e => {
                bootScreen.style.display = 'none';
                loadStreamerGrid();
            });
        });

        // 3. DYNAMIC GRID LOADING
        async function loadStreamerGrid() {
            const systemText = document.getElementById('system-text-global');
            try {
                const res = await fetch('https://api.void14.wtf');
                if (!res.ok) throw new Error('API_OFFLINE');
                const data = await res.json();
                const users = data.users || [];
                gridContainer.innerHTML = ''; 

                users.forEach(user => {
                    const card = document.createElement('div');
                    card.className = 'streamer-card';
                    card.innerHTML = `
                        <div class="card-hitbox"></div>
                        <img src="${user.profile_image_url}" alt="${user.display_name}">
                        <span class="streamer-name">${user.display_name}</span>
                    `;
                    card.onclick = () => {
                        if (systemText) systemText.innerHTML = `ESTABLISHING_UPLINK: ${user.login.toUpperCase()}...`;
                        window.location.href = `/chat-overlay?channel=${user.login.toLowerCase()}`;
                    };
                    gridContainer.appendChild(card);
                });
                
                if (systemText) systemText.innerHTML = `NODES_DETECTED: <span class="cyan-highlight">${users.length}</span> ACTIVE_CHANNELS`;
            } catch (err) {
                if (systemText) systemText.innerHTML = `<span style="color: #ff0055;">CRITICAL_FAILURE: UNABLE_TO_SYNC</span>`;
            }
        }

        // 4. HOVER SOUNDS
        gridContainer.addEventListener('mouseover', (e) => {
            const hitbox = e.target.closest('.card-hitbox');
            if (hitbox) {
                const card = hitbox.parentElement;
                if (card !== lastHoveredId) {
                    uplinkSound.currentTime = 0;
                    uplinkSound.play().catch(() => {});
                    lastHoveredId = card;
                }
            }
        });

        gridContainer.addEventListener('mouseout', (e) => {
            if (e.target.classList.contains('card-hitbox')) {
                lastHoveredId = null;
            }
        });
    </script>
</Layout>

<style>
    /* 1. CUSTOM PROPERTY FOR SMOOTH GRADIENT ROTATION */
    @property --angle {
        syntax: '<angle>';
        initial-value: 0deg;
        inherits: false;
    }

    @keyframes rotate-border {
        to { --angle: 360deg; }
    }

    /* 2. GLASSY CARD BASE */
    :global(.streamer-card) {
        position: relative;
        background: rgba(15, 10, 25, 0.4);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 12px;
        padding: 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        z-index: 1;
        overflow: hidden;
        border: 1px solid rgba(0, 242, 255, 0.15);
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275), background 0.3s ease;
    }

    /* 3. THE ANIMATED BEAM (Corrected Scaling) */
    :global(.streamer-card::before) {
        content: "";
        position: absolute;
        /* inset -1px aligns precisely with the border edge */
        inset: -1px;
        z-index: -1;
        /* padding 2px creates the thickness of the visible line */
        padding: 2px;
        border-radius: 12px;
        
        background: conic-gradient(
            from var(--angle),
            transparent 70%,
            #00f2ff,
            #9d00ff,
            #00f2ff
        );

        /* Masking ensures the light ONLY shows in the 2px padding perimeter */
        -webkit-mask: 
            linear-gradient(#fff 0 0) content-box, 
            linear-gradient(#fff 0 0);
        mask: 
            linear-gradient(#fff 0 0) content-box, 
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }

    /* 4. HOVER STATES */
    :global(.streamer-card:hover) {
        transform: translateY(-8px) scale(1.02);
        background: rgba(15, 10, 25, 0.7);
        border-color: rgba(0, 242, 255, 0); /* Hide static border to let beam shine */
    }

    :global(.streamer-card:hover::before) {
        opacity: 1;
        animation: rotate-border 3s linear infinite;
    }

    /* 5. CARD CONTENT */
    :global(.streamer-card img) {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        border: 2px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    :global(.streamer-card:hover img) {
        border-color: #00f2ff;
        transform: scale(1.05);
        box-shadow: 0 0 15px rgba(0, 242, 255, 0.2);
    }

    :global(.streamer-name) {
        font-weight: 900;
        font-size: 0.9rem;
        letter-spacing: 2px;
        color: rgba(255, 255, 255, 0.5);
        text-transform: uppercase;
        transition: color 0.3s ease;
    }

    :global(.streamer-card:hover .streamer-name) {
        color: #fff;
    }

    :global(.card-hitbox) {
        position: absolute;
        inset: 0;
        z-index: 10;
        cursor: pointer;
    }

    /* 6. PAGE STRUCTURE */
    .page-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        width: 100%;
    }

    #selection-screen {
        flex: 1;
        position: relative;
        z-index: 100;
        padding: 100px 40px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .streamer-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 30px;
        width: 100%;
        max-width: 1200px;
        margin-top: 60px;
    }

    /* 7. BOOT SCREEN */
    #boot-screen {
        position: fixed;
        inset: 0;
        z-index: 99999;
        background: #07030d;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.5s ease;
    }

    #initialize-btn {
        background: rgba(0, 242, 255, 0.05);
        border: 2px solid #00f2ff;
        padding: 15px 40px;
        cursor: pointer;
        margin-top: 20px;
        transition: all 0.2s ease;
    }

    #initialize-btn:hover {
        background: rgba(0, 242, 255, 0.15);
        box-shadow: 0 0 15px rgba(0, 242, 255, 0.3);
    }

    .pulse-text-init {
        animation: pulse 2s infinite;
        font-weight: 900;
        color: #00f2ff;
        letter-spacing: 2px;
    }

    .terminal-loader {
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.8rem;
        letter-spacing: 2px;
        text-align: center;
    }

    @keyframes pulse { 0%, 100% { opacity: 0.4; } 50% { opacity: 1; } }

    .grid-title { font-weight: 900; font-size: 1.5rem; letter-spacing: 4px; color: #fff; margin: 0; }
    .subtitle { font-size: 0.7rem; color: #00f2ff; opacity: 0.6; margin-top: 5px; text-transform: uppercase; }
</style>