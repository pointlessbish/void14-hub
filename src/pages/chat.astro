---
import Layout from '../layouts/Layout.astro';
import '../styles/chat-select.css';
---

<Layout title="void14 | select channel">
    <div id="boot-screen">
        <div class="boot-content">
            <div class="terminal-loader">VOID_OS_CORE_v1.0.4</div>
            <button id="initialize-btn">
                <span class="pulse-text-init">[ CLICK_TO_INITIALIZE_SYSTEM ]</span>
            </button>
        </div>
    </div>

    <main id="selection-screen">
        <div class="header-section">
            <h1 class="grid-title">PROTOCOL: SELECT_UPLINK_SOURCE</h1>
            <p class="subtitle">CONNECTING_TO_ACTIVE_NODES...</p>
        </div>
        
        <div id="grid-container" class="streamer-grid">
            <div class="loading-state"> 
                <span class="pulse-text">SCANNING_FREQUENCIES...</span>
            </div>
        </div>

        <div class="footer-status">
            <span class="pulse-dot"></span> 
            <span id="system-text">SYSTEM_READY: STANDING_BY</span>
        </div>
    </main>

    <script is:inline>
        const bootScreen = document.getElementById('boot-screen');
        const initBtn = document.getElementById('initialize-btn');

        initBtn.addEventListener('click', () => {
            // Prime the global audio object
            if (window.uplinkSound) {
                window.uplinkSound.play().then(() => {
                    window.uplinkSound.pause();
                    window.uplinkSound.currentTime = 0;
                    
                    bootScreen.style.opacity = '0';
                    setTimeout(() => {
                        bootScreen.style.display = 'none';
                        loadStreamerGrid();
                    }, 500);
                }).catch(e => {
                    // Fallback if browser still grumbles
                    bootScreen.style.display = 'none';
                    loadStreamerGrid();
                });
            }
        });

        async function loadStreamerGrid() {
            const container = document.getElementById('grid-container');
            const systemText = document.getElementById('system-text');
            try {
                const res = await fetch('https://api.void14.wtf');
                if (!res.ok) throw new Error('API_OFFLINE');
                const data = await res.json();
                const users = data.users || [];
                container.innerHTML = ''; 

                users.forEach(user => {
                    const card = document.createElement('div');
                    card.className = 'streamer-card';
                    card.innerHTML = `
                        <div class="card-hitbox"></div>
                        <div class="card-glow" style="pointer-events: none;"></div>
                        <img src="${user.profile_image_url}" alt="${user.display_name}" style="pointer-events: none;">
                        <span style="pointer-events: none;">${user.display_name}</span>
                    `;
                    card.onclick = () => {
                        systemText.innerHTML = `ESTABLISHING_UPLINK: <span class="cyan-highlight">${user.login.toUpperCase()}</span>...`;
                        window.location.href = `/chat-overlay?channel=${user.login.toLowerCase()}`;
                    };
                    container.appendChild(card);
                });
                systemText.innerHTML = `NODES_DETECTED: <span class="cyan-highlight">${users.length}</span> ACTIVE_CHANNELS`;
            } catch (err) {
                systemText.innerHTML = `<span style="color: #ff0055;">CRITICAL_FAILURE: UNABLE_TO_SYNC</span>`;
            }
        }
    </script>
</Layout>

<style>
    #boot-screen {
        position: fixed;
        inset: 0;
        z-index: 2000;
        background: #07030d;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.5s ease;
        pointer-events: all;
    }

    #initialize-btn {
        background: transparent;
        border: 1px solid var(--void-cyan);
        padding: 15px 30px;
        cursor: pointer;
        margin-top: 20px;
        position: relative;
        z-index: 2001;
        pointer-events: auto;
    }

    .pulse-text-init {
        animation: pulse 2s infinite;
        font-family: 'Inter', sans-serif;
        color: var(--void-cyan);
        font-weight: 900;
        letter-spacing: 2px;
    }

    #selection-screen {
        position: relative;
        z-index: 100;
        padding-top: 80px;
    }

    .footer-status {
        position: fixed;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        font-family: 'Inter', sans-serif;
        font-size: 0.65rem;
        background: rgba(0,0,0,0.5);
        padding: 5px 15px;
        border-radius: 20px;
        backdrop-filter: blur(5px);
        z-index: 1100; /* Above scanlines */
    }

    @keyframes pulse { 0%, 100% { opacity: 0.4; } 50% { opacity: 1; } }

    /* CARD HITBOX */
    :global(.card-hitbox) {
        position: absolute;
        inset: 0;
        z-index: 1000; /* Above scanlines */
        cursor: pointer;
        pointer-events: auto;
    }

    /* TYPOGRAPHY */
    .grid-title { font-family: 'Inter', sans-serif; font-weight: 900; font-size: 1.5rem; letter-spacing: 4px; color: #fff; margin: 0; text-align: center; }
    .subtitle { font-family: 'Inter', sans-serif; font-size: 0.7rem; color: var(--void-cyan); opacity: 0.6; margin-top: 5px; text-transform: uppercase; text-align: center; }
    .cyan-highlight { color: var(--void-cyan); text-shadow: 0 0 8px var(--void-cyan); font-weight: 900; }
</style>