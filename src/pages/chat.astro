---
import Layout from '../layouts/Layout.astro';
import '../styles/chat-select.css';
---

<Layout title="VOID14 | SELECT_SOURCE">
    <main id="selection-screen">
        <div class="header-section">
            <h1 class="grid-title">PROTOCOL: SELECT_UPLINK_SOURCE</h1>
            <p class="subtitle">CONNECTING_TO_ACTIVE_NODES...</p>
        </div>
        
        <div id="grid-container" class="streamer-grid">
            <div class="loading-state">
                <span class="pulse-text">SCANNING_FREQUENCIES...</span>
            </div>
        </div>

        <div class="footer-status">
            <span class="pulse-dot"></span> 
            <span id="system-text">SYSTEM_READY: STANDING_BY</span>
        </div>
    </main>

    <script is:inline>
        async function loadStreamerGrid() {
            const container = document.getElementById('grid-container');
            const systemText = document.getElementById('system-text');
            
            try {
                // Fetch the list of streamers from your Worker API
                const res = await fetch('https://api.void14.wtf');
                if (!res.ok) throw new Error('API_OFFLINE');
                
                const data = await res.json();
                const users = data.users || [];

                // Clear the loading state
                container.innerHTML = ''; 

                users.forEach(user => {
                    // Create the rounded card
                    const card = document.createElement('div');
                    card.className = 'streamer-card';
                    card.innerHTML = `
                        <div class="card-glow"></div>
                        <img src="${user.profile_image_url}" alt="${user.display_name}" loading="lazy">
                        <span>${user.display_name}</span>
                    `;

                    // Click handler to route to /[channel]
                    card.onclick = () => {
                        systemText.innerText = `ESTABLISHING_UPLINK: ${user.login.toUpperCase()}...`;
                        // This matches your flat file structure src/pages/[channel].astro
                        window.location.href = `/${user.login.toLowerCase()}`;
                    };

                    container.appendChild(card);
                });

                systemText.innerText = `NODES_DETECTED: ${users.length} ACTIVE_CHANNELS`;
            } catch (err) {
                console.error(err);
                systemText.innerText = "CRITICAL_FAILURE: UNABLE_TO_SYNC";
                container.innerHTML = `
                    <div class="error-msg">
                        <p>SOURCE_LIST_UNAVAILABLE</p>
                        <button onclick="location.reload()" style="background:transparent; border:1px solid #00ffff; color:#00ffff; padding:5px 10px; cursor:pointer; margin-top:10px;">RETRY_SCAN</button>
                    </div>
                `;
            }
        }

        // Initialize on load
        loadStreamerGrid();
    </script>
</Layout>

<style>
    /* Inline styles for the specific page structure to ensure alignment */
    #selection-screen {
        position: relative;
        z-index: 10;
        padding-top: 80px;
    }

    .header-section {
        text-align: center;
        margin-bottom: 50px;
    }

    .grid-title {
        font-family: 'Inter', sans-serif;
        font-weight: 900;
        font-size: 1.5rem;
        letter-spacing: 4px;
        color: #fff;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
    }

    .subtitle {
        font-family: 'Inter', sans-serif;
        font-size: 0.7rem;
        color: rgba(0, 255, 255, 0.5);
        margin-top: 5px;
        letter-spacing: 2px;
    }

    .footer-status {
        position: fixed;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        font-family: 'Inter', sans-serif;
        font-size: 0.65rem;
        color: rgba(255, 255, 255, 0.4);
        display: flex;
        align-items: center;
        gap: 10px;
        background: rgba(0,0,0,0.5);
        padding: 5px 15px;
        border-radius: 20px;
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255,255,255,0.05);
    }

    .pulse-dot {
        width: 6px;
        height: 6px;
        background: #00ffff;
        border-radius: 50%;
        box-shadow: 0 0 8px #00ffff;
        animation: pulse 1.5s infinite;
    }

    @keyframes pulse {
        0% { opacity: 0.4; }
        50% { opacity: 1; }
        100% { opacity: 0.4; }
    }

    .loading-state {
        grid-column: 1 / -1;
        text-align: center;
        padding: 100px;
        color: rgba(255, 255, 255, 0.2);
        font-size: 0.8rem;
        letter-spacing: 2px;
    }
</style>