---
// src/pages/nekorebby/index.astro
import '../../styles/global.css';
import { getTwitchPFP } from '../../lib/twitch';

const env = Astro.locals.runtime?.env ?? process.env;

// This fetches the actual PFP URL from Twitch
const botPFP = await getTwitchPFP(env);

const title = "VOID14 | NEKOREBBY";
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    
    <meta property="og:title" content={title}>
    <meta property="og:image" content={botPFP}>
    <meta property="og:theme-color" content="#9d00ff">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
    
    <link rel="icon" type="image/png" href={botPFP}>

    <style is:global>
        .scanline {
            z-index: 9999;
            pointer-events: none !important;
        }
    </style>
</head>
<body>
    <div class="background-vignette" style="background-image: url('/void14.png')"></div>
    
    <div class="scanline"></div>
    
    <div class="container">
        <header>
            <h1 class="profile-title" id="glitch-title">NEKOREBBY</h1>
            <p class="profile-subtitle">EXTRACTING FROM THE VOID</p>
        </header>

        <div class="section-label">Unit Status</div>
        
        <div class="link-card is-live">
            <div class="card-header-wrapper">
                <div class="card-main-link" style={`--profile-pic: url('${botPFP}')`}>
                    <div class="member-info">
                        <div class="member-name">Nekorebby Core</div>
                        <div class="status live">
                            <i class="fas fa-circle"></i> ACTIVE <span class="separator">|</span> EDGE RUNTIME
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-label">Connections</div>
        <div class="socials-row">
            <a href="https://twitch.tv/nekorebby" class="social-icon twitch">
                <i class="fab fa-twitch"></i>
            </a>
        </div>

        <footer>&copy; 2026 VOID14.WTF // NEKOREBBY PROTOCOL</footer>
    </div>

    <script>
        const title = document.getElementById('glitch-title');
        const originalText = "NEKOREBBY";
        const chars = "ABCDEFGHIJKLM NOPQRSTUVWXYZ1234567890@#$%";

        function glitch() {
            if (!title) return;
            let iterations = 0;
            const interval = setInterval(() => {
                title.innerText = originalText.split("")
                    .map((char, index) => {
                        if (index < iterations) return originalText[index];
                        return chars[Math.floor(Math.random() * chars.length)];
                    }).join("");
                
                if (iterations >= originalText.length) clearInterval(interval);
                iterations += 1 / 3;
            }, 30);
        }
        window.addEventListener('load', glitch);
        title?.addEventListener('mouseover', glitch);
    </script>
</body>
</html>