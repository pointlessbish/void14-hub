---
interface Props {
	title: string;
	isOverlay?: boolean;
}
const { title, isOverlay = false } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
	</head>
	<body class={isOverlay ? "overlay-mode" : "standard-mode"}>
		
		{!isOverlay && (
			<>
				<div class="background-vignette"></div>
				<div class="scanline"></div>
			</>
		)}
		
		<slot />

		<style is:global>
			/* CSS Property Definition for Animated Borders */
			@property --angle {
				syntax: '<angle>';
				initial-value: 0deg;
				inherits: false;
			}

			:root {
				--bg-dark: #07030d;
				--text-main: #ffffff;
				--void-purple: #9d00ff;
				--void-cyan: #00f2ff;
				--glass-bg: #0c0716;
				--glass-border: rgba(255, 255, 255, 0.1);
			}

			body { margin: 0; background-color: var(--bg-dark); }

			/* THE DUAL SCANLINE SYSTEM */
			.scanline {
				position: fixed; inset: 0; z-index: 10; pointer-events: none;
				background: linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, 0.18) 51%);
				background-size: 100% 4px;
				animation: scanlineScroll 0.25s linear infinite;
			}
			.scanline::after {
				content: ""; position: absolute; top: -100px; left: 0; width: 100%; height: 100px;
				background: linear-gradient(to bottom, transparent, rgba(0, 242, 255, 0.04), transparent);
				animation: scanBeam 8s linear infinite;
			}

			.background-vignette {
				position: fixed; inset: 0; z-index: 1;
				background-image: url('/void14.png');
				background-size: cover; background-position: center;
				filter: blur(50px) brightness(0.2); transform: scale(1.1);
			}

			@keyframes scanlineScroll { from { background-position: 0 0; } to { background-position: 0 4px; } }
			@keyframes scanBeam { 0% { top: -10%; } 100% { top: 110%; } }
			@keyframes rotateGradient { to { --angle: 360deg; } }
		</style>
	</body>
</html>